<Window x:Class="SalaryApp.Manager"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SalaryApp"
        mc:Ignorable="d"
        Title="Esoft SalaryApp | Manager" Height="622.105" Width="938.947" ResizeMode="NoResize" WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="150"/>
            <RowDefinition Height="450"/>
        </Grid.RowDefinitions>
        <Image Grid.Row="0" HorizontalAlignment="Left" Height="104" Margin="15,21,0,0" VerticalAlignment="Top" Width="260" Source="logo.png"/>
        <Label x:Name="LoginLabel" Grid.Row="0" Content="Ваш логин: " HorizontalAlignment="Left" Margin="296,26,0,0" VerticalAlignment="Top" FontFamily="Comic Sans MS"/>
        <Label x:Name="FullNameLabel" Content="ФИО Менеджера:" HorizontalAlignment="Left" Margin="296,57,0,0" VerticalAlignment="Top" FontFamily="Comic Sans MS"/>
        <Label Content="Список задач" HorizontalAlignment="Left" Margin="15,10,0,0" Grid.Row="1" VerticalAlignment="Top" FontWeight="Bold" FontFamily="Comic Sans MS"/>
        <DataGrid x:Name="TasksDG" HorizontalAlignment="Left" Height="401" Margin="0,42,0,0" Grid.Row="1" VerticalAlignment="Top" Width="933" CanUserAddRows="False" AutoGenerateColumns="False">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Заголовок задачи" Binding="{Binding Path=Name}" FontFamily="Comic Sans MS" IsReadOnly="True"/>
                <DataGridTextColumn Header="Статус задачи" Binding="{Binding Path=Status}" FontFamily="Comic Sans MS" IsReadOnly="True" />
                <DataGridTextColumn Header="ФИО исполнителя" Binding="{Binding Path=Executor}" FontFamily="Comic Sans MS" IsReadOnly="True" />
                <DataGridTemplateColumn>
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Button x:Name="DelBtn" Content="Удалить" Click="DelBtn_Click" FontFamily="Comic Sans MS"></Button>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
                <DataGridTemplateColumn>
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Button x:Name="EditBtn" Content="Подробнее" Click="EditBtn_Click" FontFamily="Comic Sans MS"></Button>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>
        <Button x:Name="CoeffBtn" Content="Посмотреть коэффициенты" HorizontalAlignment="Left" Margin="728,104,0,0" VerticalAlignment="Top" Width="174" FontFamily="Comic Sans MS" Click="CoeffBtn_Click"/>
        <Button x:Name="AddBtn" Content="Добавить задание" HorizontalAlignment="Left" Margin="728,63,0,0" VerticalAlignment="Top" Width="133" Click="AddBtn_Click" FontFamily="Comic Sans MS"/>
        <Button x:Name="CalculateBtn" Content="Рассчитать зарплату" HorizontalAlignment="Left" Margin="728,21,0,0" VerticalAlignment="Top" Width="174" Click="CalculateBtn_Click" FontFamily="Comic Sans MS"/>
        <Button x:Name="UserBtn" Content="Сменить пользователя" HorizontalAlignment="Left" Margin="296,104,0,0" VerticalAlignment="Top" Width="174" FontFamily="Comic Sans MS" Click="UserBtn_Click"/>
        <ComboBox x:Name="ExecutorsCB" Text="Все исполнители" Focusable="False" HorizontalAlignment="Left" VerticalAlignment="Top" Width="260" Margin="160,10,0,0" DropDownClosed="ExecutorsCB_DropDownClosed" Grid.Row="1" FontFamily="Comic Sans MS" IsEditable="True" IsReadOnly="True"/>
        <ComboBox x:Name="StatusCB" Text="Любой статус" Focusable="False" HorizontalAlignment="Left" Height="22" Margin="560,10,0,0" Grid.Row="1" VerticalAlignment="Top" Width="158" DropDownClosed="StatusCB_DropDownClosed" IsEditable="True" IsReadOnly="True"/>
    </Grid>
</Window>
